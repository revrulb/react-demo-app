{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["es2017", "es7", "es6", "dom"],
        "declaration": true,
        "outDir": "Transpiled",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "baseUrl": "Sources",
        "paths": {
            "Components": ["Components/index.ts"],
            "Views": ["Views/index.ts"],
            "State": ["State/index.ts"],
            "Models": ["Models/index.ts"],
            "Utils": ["Utils/index.ts"],
            "Hooks": ["Hooks/index.ts"]
        }
    },
    "include": ["./Sources"]
}